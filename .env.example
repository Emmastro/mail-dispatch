# General configuration
EMAIL_PROVIDER=sendgrid  # Options: sendgrid, aws, azure, gcp
EMAIL_TEMPLATE_DIR=./templates/emails  # Path to email templates directory

# SendGrid configuration
EMAIL_SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS SES configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SENDER_EMAIL=noreply@yourdomain.com

# Azure Communication Services configuration
AZURE_COMMUNICATION_CONNECTION_STRING=your_azure_connection_string
AZURE_SENDER_EMAIL=noreply@yourdomain.com

# GCP configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_PUBSUB_EMAIL_TOPIC=email-notifications
GCP_SENDER_EMAIL=noreply@yourdomain.com
GCP_SERVICE_ACCOUNT_JSON=path/to/service-account-key.json

# Testing configuration
RUN_INTEGRATION_TESTS=false
TEST_EMAIL_RECIPIENT=test@example.com